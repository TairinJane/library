{
  "compilerOptions": {
    "lib": [
      "es6",
      "es5",
      "dom",
      "dom.iterable",
      "es7",
      "es2019"
    ],
    "outDir": "grails-app/assets/",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "removeComments": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./ui/@types/*",
    "preserveConstEnums": true,
    "downlevelIteration": true
  },
  "include": [
    "./ui/**/*"
  ],
  "exclude": [
    "**/*.test.(ts|tsx|jsx|js)",
    "node_modules"
  ]
}
